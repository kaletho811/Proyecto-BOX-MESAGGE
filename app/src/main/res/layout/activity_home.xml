<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/Logo_Home"
            android:layout_width="400dp"
            android:layout_height="306dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@mipmap/ic_launcher_foreground"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/Titulo_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="casual"
            android:text="@string/box_message"
            android:textColor="@color/green"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/Text_Home"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="cursive"
            android:text="@string/inicia_una_nueva_aventura_con_box_message_y_descubre_una_nueva_forma_de_ver_el_mundo"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_Home"
            android:layout_width="180dp"
            android:layout_height="91dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/green"
            android:text="@string/comienza"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Regis_text_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="casual"
            android:text="@string/registrate"
            android:textColor="@color/orange"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>